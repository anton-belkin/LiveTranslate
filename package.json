{
  "name": "livetranslate",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "pnpm -r --parallel --filter ./packages/shared dev --filter ./apps/* dev",
    "build": "pnpm -r --filter ./apps/* build && pnpm -r --filter ./packages/* build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.25.12"
    }
  }
}
